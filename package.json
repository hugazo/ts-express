{
  "name": "express-ts",
  "version": "0.0.4",
  "description": "Simple Express Typescript Boilerplate",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon index.ts",
    "lint": "eslint .",
    "build": "tsc --project ./",
    "image:local": "docker build -t node-api:latest .",
    "image:local:run": "docker run -d -p 3000:3000 node-api:latest",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "_moduleAliases": {
    "@controllers": "build/controllers",
    "@middleware": "build/middleware",
    "@models": "build/models",
    "@router": "build/router",
    "@validations": "build/validations",
    "@test": "build/test"
  },
  "keywords": [],
  "author": "Hugo Morales <hugo@42devs.cl>",
  "license": "ISC",
  "nodemonConfig": {
    "ignore": ["build/*", "node_modules/*"],
    "events": {
      "start": "yarn build"
    }
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-list-endpoints": "^5.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^5.11.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/express-list-endpoints": "^4.0.1",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
