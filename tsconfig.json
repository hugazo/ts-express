{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middleware/*": ["middleware/*"],
      "@models/*": ["models/*"],
      "@router/*": ["router/*"],
      "@validations/*": ["validations/*"],
      "@tests/*": ["tests/*"],
    }
  },
  "moduleResolution": "node",

}
